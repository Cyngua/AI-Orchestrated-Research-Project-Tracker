# Streamlit Secrets Configuration
# Copy this file to secrets.toml and update with your actual values
# DO NOT commit secrets.toml to version control
#
# For Streamlit Cloud: Add these secrets via the dashboard
# Settings > Secrets > Edit secrets
#
# For local development: Copy this file to secrets.toml in the .streamlit directory

# GPT Services Configuration
# Set to "true" to enable GPT-powered features (AI summaries, reports, etc.)
# Set to "false" to disable GPT services (useful for deployment without API keys)
GPT_SERVICES_ENABLED = "false"

# OpenAI API Key (required if GPT_SERVICES_ENABLED=true)
OPENAI_API_KEY = "your_openai_api_key_here"

# Authentication Configuration
# Set to "true" to enable email-based authentication
# Set to "false" to allow unrestricted access (NOT recommended for production)
AUTH_ENABLED = "true"

# Allowed Email Addresses (comma-separated or as a list)
# Only these email addresses will be able to access the application
# You can use either format:
# ALLOWED_EMAILS = "user1@example.com,user2@example.com,admin@example.com"
# OR
# ALLOWED_EMAILS = ["user1@example.com", "user2@example.com", "admin@example.com"]
ALLOWED_EMAILS = "admin@example.com"
